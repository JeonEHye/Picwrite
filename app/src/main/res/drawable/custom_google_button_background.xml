<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼이 클릭되지 않았을 때의 기본 상태 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 버튼 배경 색: 흰색 -->
            <corners android:radius="8dp" /> <!-- 모서리를 둥글게 -->
            <stroke android:width="2dp" android:color="#4285F4" /> <!-- 파란색 테두리 -->
        </shape>
    </item>

    <!-- 버튼이 클릭되었을 때의 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- 클릭 시 배경 색: 연한 회색 -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#4285F4" />
        </shape>
    </item>
</selector>