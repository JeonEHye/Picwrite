<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_diary_list"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_diary_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테스트 일기 목록 제목입니다"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iv_diary_list"
        app:layout_constraintStart_toStartOf="@id/iv_diary_list"
        app:layout_constraintEnd_toEndOf="@id/iv_diary_list"
        app:layout_constraintBottom_toBottomOf="@id/iv_diary_list"/>


</androidx.constraintlayout.widget.ConstraintLayout>